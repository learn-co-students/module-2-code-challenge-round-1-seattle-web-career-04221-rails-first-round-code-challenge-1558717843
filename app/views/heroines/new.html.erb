<h1>Create a new Heroine:</h1>

<% if @heroine.errors.any? %>
      <h2>Error:</h2>
      <ul>
        <% @heroine.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>

<%= form_for @heroine do |f| %>

<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :super_name %>
<%= f.text_field :super_name %><br>
<%= f.label :power %>
<%= f.collection_select(:power_id, Power.all, :id, :name) %><br>
<%= f.submit %>

<% end %>
