<h2>All Heroines</h2>

<%= form_tag("/heroines/search", method: "get") do %>
<%= label_tag(:q, "Search by Superpower:") %> <br>
<%= text_field_tag(:q) %>
<%= submit_tag("Search") %>
<% end %>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine %>
    </li>
    <br>
  <% end %>
</ul>
