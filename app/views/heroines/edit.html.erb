<h1>Update Your Heroine!</h1>

<%= form_for(@heroine) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <br>

    <%= f.label :super_name %>
    <%= f.text_field :super_name %><br>
    <br>

    <label>Choose The Super Power:</label>
    <%= f.collection_select :power_id, Power.all, :id, :name %><br>
    <br>

    <%= f.submit %>
<% end %>